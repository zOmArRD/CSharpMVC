@model dynamic

@{
    ViewBag.Title = "title";
    Layout = "_LayoutLogin";
}

<h2>Log into your account</h2>

<div class="row">
    <div class="col-sm-6">
        <form action="@Url.Action("Login", "Acceso")" method="post" style="padding: 10px">
            <div class="col-form-label">
                <label>Correo:</label>
                <input class="form-control" type="email" name="correo" required="required"/>
            </div>

            <div class="col-form-label">
                <label>Contraseña:</label>
                <input class="form-control" type="password" name="clave" required="required"/>
            </div>

            <button type="submit" class="btn btn-success">Login</button>
            <a asp-action="Register" asp-controller="Acceso" class="btn btn-outline-success">Register</a>

        </form>
    </div>
</div>